export ZSH="$HOME/.oh-my-zsh"

# Env Variables
# ZSH_THEME="robbyrussell"
ZSH_THEME="af-magic"
# ZSH_THEME="lukerandall"

ZSH_AUTOSUGGEST_STRATEGY=(history completion)

plugins=(
    git # The git plugin provides many aliases and a few useful functions.
    node # Adds completion for Node.js commands.
    npm # Adds completion for npm commands.
    zoxide # zoxide is a smarter cd command. It tracks your most used directories, allowing you to jump to them with just a few keystrokes.
    zsh-autosuggestions # This plugin suggests commands as you type based on your command history and completions.
    zsh-completions # This plugin adds many useful completions for zsh.
    aliases # List the shortcuts that are currently available based on the plugins you have enabled.
    pip # Adds completion for pip, the Python package manager.
    docker # Adds auto-completion and aliases for docker.
    git-auto-fetch # Automatically fetches all changes from all remotes while you are working in a git-initialized directory.
    last-working-dir # Keeps track of the last used working directory and automatically jumps into it for new shells, unless the starting directory is not $HOME.
    dirhistory # Adds keyboard shortcuts for navigating directory history and hierarchy. left + right + option/alt
    macos # This plugin provides a few utilities to make it more enjoyable on macOS
    ngrok # This plugin adds completion for the ngrok CLI.
    python # The plugin adds several aliases for useful Python commands.
    # virtualenvwrapper # The plugin allows to automatically activate virtualenvs on cd into git repositories with a matching name
    zsh-interactive-cd # This plugin provides an interactive way to change directories in zsh using fzf.
    uv # This plugin automatically installs uv's completions for you, and keeps them up to date. It also adds convenient aliases
    alias-finder # This plugin searches the defined aliases and outputs any that match the command inputted. This makes learning new aliases easier.
    command-not-found # This plugin uses the command-not-found package for zsh to provide suggested packages to be installed if a command cannot be found.
    fzf-tab # This plugin adds fzf integration for tab completion.
    zsh-autocomplete # This plugin provides a more powerful and flexible autocomplete experience for zsh.
    ngrok # This plugin adds completion for the ngrok CLI.
    docker-compose # Adds auto-completion and aliases for docker-compose.
    gh  # Adds completion and aliases for GitHub's CLI tool
    mise # https://github.com/g-plane/pnpm-shell-completion?tab=readme-ov-file#oh-my-zsh
)

source $ZSH/oh-my-zsh.sh

# Aliases
alias cd="z"
alias ls="eza"
alias ping="gping"
alias curl="curlie"
alias ps="procs"
alias fd="find"
alias df="duf"

# Commands
fastfetch
eval "$(atuin init zsh)"
eval $(thefuck --alias)
source <(fzf --zsh)